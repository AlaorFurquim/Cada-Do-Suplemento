@model Suplemento

<div class = "col-sm-4 col-md-4 col-lg-4" >
        <div class = "ImgSuplementos">
            <p><img src ="@Model.ImagemUrl"></p>
        </div>
        <h3>Preço : @Model.Preco.ToString("c")</h3>

        <h4>
        <a asp-controller = "Suplemento" asp-action = "Details"
        asp-route-suplementoId = "@Model.SuplementoId">@Model.Nome</a>
        </h4>
        <p>@Model.DescricaoCurta</p>
        <div>
        <p class = "button">
            <a class = "btn btn-primary" id = "cartButton" asp-controller = "CarrinhoCompra"
            asp-action = "AdicionarNoCarrinhoCompra" asp-route-SuplementoId = "@Model.SuplementoId">
            Incluir no Carrinho
        </a>
        </p>
        </div>
    </div>