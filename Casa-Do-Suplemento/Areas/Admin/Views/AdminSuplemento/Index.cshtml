@model ReflectionIT.Mvc.Paging.PagingList<Casa_Do_Suplemento.Models.Suplemento>

@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon gluphicon-search" aria-hidden="true"></span> Procurar
    </button>
</form>

Total de Produtos : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<div class="row">
    <div class="col-md-10">


        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.IsSuplementoFavorito)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmEstoque)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoCurta)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.IsSuplementoFavorito)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmEstoque)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.CategoriaName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SuplementoId">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.SuplementoId">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.SuplementoId">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
